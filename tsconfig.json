{
  "compilerOptions": {
    "lib": ["es2017", "DOM"],
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "./types"
  ],
  "exclude": [
    "node_modules",
  ]
}
